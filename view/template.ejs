<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 20px 40px;
      padding: 0;
      line-height: 1.4;
      background-color: #fff;
      color: #222;
    }

    h1.name {
      text-align: center;
      margin: 0;
      padding: 0;
      color: #2c3e50;
    }

    h3 {
      text-align: center;
      margin: 4px 0 16px;
      font-weight: normal;
      font-size: 14px;
      color: #555;
    }

    h3 span {
      margin: 0 6px;
    }

    h3 a {
      color: #2980b9;
      text-decoration: none;
    }

    h3 a:hover {
      text-decoration: underline;
    }

    h2 {
      font-size: 22px;
      border-bottom: 1px solid #2980b9;
      padding-bottom: 2px;
      margin: 20px 0 8px;
      color: #2c3e50;
    }

    ul {
      list-style-type: none;
      padding-left: 0;
      margin: 6px 0 12px;
    }

    ul li {
      margin-bottom: 2px;
      font-size: 16px;
    }

    .course,
    .institution,
    .year {
      font-weight: 500;
      color: #34495e;
    }

    
    .skill,
    .projects,
    .work-experience,
    .achievements {
      padding: 0;
      margin-bottom: 12px;
      font-size: 16px;
      border-left: 2px solid #2980b9;
      padding-left: 10px;
    }

    .projects p,
    .work-experience p,
    .achievements p {
      margin: 0 0 6px;
    }

    @media print {
      body {
        margin: 0.4in;
      }

      a {
        color: black;
        text-decoration: none;
      }

      h2 {
        border-color: #000;
      }

      .projects,
      .work-experience,
      .achievements {
        border-left-color: #000;
      }
    }
  </style>

</head>

<body>

  <h1 class="name">
    <%= name %>
  </h1>

  <h3>
    <span class="number">
      <%= phone %>
    </span> |
    <span class="email">
      <%= email %>
    </span> |
    <span class="linkedin"><a href="<%= linkedin %>" target="_blank">LinkedIn</a></span>
  </h3>

  <h2>EDUCATION</h2>
  <ul>
    <li>Degree: <span class="course">
        <%= degree %>
      </span></li>
    <li>Institution: <span class="institution">
        <%= college %>
      </span></li>
    <li>Year of Graduation: <span class="year">
        <%= year %>
      </span></li>
  </ul>

  <% if (typeof skills==='string' && skills.trim().toUpperCase() !=='NA' && skills.trim() !=='' ) { %>
    <h2>TECHNICAL SKILL</h2>
    <div class="skill"><%= skills %></div>
    <% } %>

      <% if (typeof projects==='string' && projects.trim().toUpperCase() !=='NA' && projects.trim() !=='' ) { %>
        <h2>PROJECTS</h2>
        <div class="projects"><%- projects %></div>
        <% } %>

          <% if (typeof experience==='string' && experience.trim().toUpperCase() !=='NA' && experience.trim() !=='' ) {
            %>
            <h2>WORK EXPERIENCE</h2>
            <div class="work-experience"><%- experience %></div>
            <% } %>

              <% if (typeof achievements==='string' && achievements.trim().toUpperCase() !=='NA' && achievements.trim()
                !=='' ) { %>
                <h2>ACHIEVEMENTS</h2>
                <div class="achievements"><%- achievements %></div>
                <% } %>

</body>

</html>
